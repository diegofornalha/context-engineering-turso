# Turso Database Configuration

# Primary database (master)
TURSO_PRIMARY_URL=libsql://your-primary-db.turso.io
TURSO_PRIMARY_TOKEN=your-auth-token

# Replica databases
TURSO_REPLICA_1_URL=libsql://your-replica-1.turso.io
TURSO_REPLICA_1_TOKEN=your-auth-token

TURSO_REPLICA_2_URL=libsql://your-replica-2.turso.io
TURSO_REPLICA_2_TOKEN=your-auth-token

# Additional regions (optional)
TURSO_US_URL=libsql://your-us-db.turso.io
TURSO_US_TOKEN=your-auth-token

TURSO_EU_URL=libsql://your-eu-db.turso.io
TURSO_EU_TOKEN=your-auth-token

TURSO_ASIA_URL=libsql://your-asia-db.turso.io
TURSO_ASIA_TOKEN=your-auth-token

# Sync Configuration
SYNC_INTERVAL=5000
CONFLICT_STRATEGY=last-write-wins
ENABLE_REALTIME=true
QUORUM_SIZE=2

# WebSocket Configuration
WS_PORT_BASE=8000
GOSSIP_INTERVAL=2000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=10000
METRICS_RETENTION_DAYS=7

# Performance Tuning
BATCH_SIZE=100
MAX_SYNC_RETRIES=3
SYNC_TIMEOUT=30000

# Feature Flags
ENABLE_P2P=true
ENABLE_MONITORING=true
ENABLE_ANTI_ENTROPY=true