{
  "name": "turso-distributed-sync-example",
  "version": "1.0.0",
  "description": "Comprehensive distributed synchronization example with Turso edge database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "example:chat": "tsx src/examples/chat-demo.ts",
    "example:inventory": "tsx src/examples/inventory-demo.ts",
    "example:collab": "tsx src/examples/collab-demo.ts",
    "monitor": "tsx src/monitoring/dashboard.ts"
  },
  "keywords": [
    "turso",
    "distributed",
    "sync",
    "replication",
    "edge",
    "database",
    "crdt",
    "eventual-consistency",
    "real-time"
  ],
  "author": "Turso Examples",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "ws": "^8.18.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.9.3",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}