# Configuração Turso Embeddings + Claude + Graphiti

# === TURSO CONFIGURATION ===
# URL do banco Turso (pode ser local ou cloud)
TURSO_DATABASE_URL=libsql://your-database.turso.io
# Token de autenticação (obtenha com: turso db tokens create <database>)
TURSO_AUTH_TOKEN=your-auth-token

# === EMBEDDINGS CONFIGURATION ===
# Dimensão dos vetores de embedding (384 é um bom padrão)
EMBEDDING_DIM=384
# Nome da tabela de embeddings no Turso
EMBEDDING_TABLE=embeddings
# Habilitar cache de embeddings
CACHE_ENABLED=true

# === CLAUDE CONFIGURATION ===
# Modelo do Claude a usar
CLAUDE_MODEL=claude-3-5-sonnet-20241022
# Tokens máximos por resposta
CLAUDE_MAX_TOKENS=4096
# Temperatura (criatividade) 0.0-1.0
CLAUDE_TEMPERATURE=0.7

# === NEO4J CONFIGURATION ===
# URI do Neo4j para o grafo de conhecimento
NEO4J_URI=bolt://localhost:7687
# Credenciais do Neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=demodemo

# === PERFORMANCE SETTINGS ===
# Limite de operações paralelas
SEMAPHORE_LIMIT=10
# Tamanho do batch para processamento
BATCH_SIZE=100

# === FEATURE FLAGS ===
# Usar Turso para embeddings (true/false)
USE_TURSO_EMBEDDINGS=true
# Usar Neo4j para grafo (true/false)
USE_NEO4J_GRAPH=true
# Modo debug
DEBUG_MODE=false