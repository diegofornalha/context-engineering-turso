# Turso Agent - Configuração de Exemplo
# Copie este arquivo para .env e configure suas credenciais

# =============================================================================
# TURSO CORE CONFIGURATION
# =============================================================================

# Token de API do Turso (obrigatório)
# Obtenha em: https://cloud.turso.tech/settings/tokens
TURSO_API_TOKEN=your_turso_api_token_here

# Organização Turso (recomendado)
# Nome da sua organização no Turso
TURSO_ORGANIZATION=your_organization_name

# Database padrão (opcional)
# Nome do database padrão para operações
TURSO_DEFAULT_DATABASE=your_default_database

# =============================================================================
# DATABASE SPECIFIC CONFIGURATIONS
# =============================================================================

# Tokens de databases específicos (opcional)
# Formato: TURSO_DB_TOKEN_<database_name>
TURSO_DB_TOKEN_MYDB=your_database_token_here
TURSO_DB_TOKEN_TESTDB=your_test_database_token_here

# URLs de databases específicos (opcional)
# Formato: TURSO_DB_URL_<database_name>
TURSO_DB_URL_MYDB=https://your-database-name-your-org.turso.io
TURSO_DB_URL_TESTDB=https://your-test-database-name-your-org.turso.io

# =============================================================================
# MCP INTEGRATION SETTINGS
# =============================================================================

# Configurações do servidor MCP
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Ambiente de execução
ENVIRONMENT=development  # development, staging, production

# Modo debug
DEBUG=false

# Nível de log
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Habilitar logging de auditoria
ENABLE_AUDIT_LOGGING=true

# TTL do cache de tokens (em segundos)
TOKEN_CACHE_TTL=3600

# Idade máxima dos tokens (em segundos)
MAX_TOKEN_AGE=86400

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Tamanho do pool de conexões
CONNECTION_POOL_SIZE=10

# Timeout de queries (em segundos)
QUERY_TIMEOUT=30

# Máximo de tentativas
MAX_RETRIES=3 